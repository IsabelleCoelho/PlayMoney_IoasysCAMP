<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_app" >

    <ImageButton
        android:id="@+id/ButtonBackCreateAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_left" />

    <TextView
        android:id="@+id/TittleCreateAccount"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ButtonBackCreateAccount"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin ="10dp"
        android:text="Cadastro"
        android:textColor="@color/blue_app"
        android:textStyle="bold"
        android:fontFamily="@font/aldrich"
        android:textSize="35dp" />


    <TextView
        android:id="@+id/PasswordText"
        style="@style/InputTittleStyle"
        android:text="Senha:"
        app:layout_constraintBottom_toTopOf="@id/PasswordInput"
        app:layout_constraintLeft_toLeftOf="@id/PasswordInput"
        app:layout_constraintTop_toBottomOf="@id/TittleCreateAccount" />

    <EditText
        android:id="@+id/PasswordInput"
        style="@style/EditTextStyle"
        android:layout_marginTop="35dp"
        android:hint="Senha"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TittleCreateAccount" />

    <TextView
        android:id="@+id/ConfirmPasswordText"
        style="@style/InputTittleStyle"
        android:text="Confirmar senha:"
        app:layout_constraintBottom_toTopOf="@id/ConfirmPasswordInput"
        app:layout_constraintLeft_toLeftOf="@id/ConfirmPasswordInput"
        app:layout_constraintTop_toBottomOf="@id/PasswordInput" />

    <EditText
        android:id="@+id/ConfirmPasswordInput"
        style="@style/EditTextStyle"
        android:layout_marginTop="35dp"
        android:hint="Confirmar senha"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/PasswordInput" />

    <Button
        android:id="@+id/ButtonFinish"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_margin="25dp"
        android:fontFamily="@font/aldrich"
        android:background="@drawable/rounded_button"
        android:text="Finalizar!"
        android:textColor="@color/white_app"
        android:textAllCaps="false"
        android:tint="@color/white_app"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ConfirmPasswordInput" />




</androidx.constraintlayout.widget.ConstraintLayout>