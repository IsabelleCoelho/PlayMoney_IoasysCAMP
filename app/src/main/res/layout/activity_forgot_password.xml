<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_app"
    tools:context=".ui.ForgotPassword">

    <ImageButton
        android:id="@+id/ButtonBackLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_left" />

    <TextView
        android:id="@+id/TittleForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/EmailForgotPassword"
        app:layout_constraintTop_toBottomOf="@id/ButtonBackLogin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:text="Esqueci a senha"
        android:textColor="@color/blue_app"
        android:textStyle="bold"
        android:textSize="35dp"
        android:fontFamily="@font/aldrich"/>

    <EditText
        android:id="@+id/EmailForgotPassword"
        app:layout_constraintTop_toBottomOf="@id/TittleForgotPassword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="E-mail"
        android:layout_marginTop="35dp"
        style="@style/EditTextStyle"/>

    <TextView
        android:id="@+id/InstructionForgotPassword"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:fontFamily="@font/aldrich"
        android:text="Preencha o campo acima com o e-mail que foi utilizado no cadastro."
        android:textColor="@color/black_app"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/EmailForgotPassword" />

    <Button
        android:id="@+id/ButtonNewPassword"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_margin="25dp"
        android:background="@drawable/rounded_button"
        android:text="Enviar"
        android:textAlignment="center"
        android:fontFamily="@font/aldrich"
        android:textColor="@color/white_app"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/InstructionForgotPassword"
        android:textAllCaps="false"/>


</androidx.constraintlayout.widget.ConstraintLayout>