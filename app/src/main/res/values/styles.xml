<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="colorPrimary">@color/blue_app</item>
        <item name="colorPrimaryDark">@color/dark_blue_app</item>
        <item name="colorAccent">@color/dark_blue_app</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/blue_app</item>
        <item name="colorPrimaryDark">@color/dark_blue_app</item>
        <item name="colorAccent">@color/dark_blue_app</item>
    </style>


    <style name="EditTextStyle">
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:textColor">@color/blue_app</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white_app</item>
        <item name="android:fontFamily">@font/aldrich</item>
    </style>

    <style name="ButtonInvisibleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">27dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/aldrich</item>
    </style>

    <style name="InputTittleStyle">
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:fontFamily">@font/aldrich</item>
    </style>

</resources>
